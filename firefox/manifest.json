{
  "manifest_version": 3,
  "name": "Privatkopiera",
  "version": "0.4.0",
  "description": "Ladda ned från play-tjänster. Kräver ffmpeg.",
  "homepage_url": "https://stefansundin.github.io/privatkopiera/",
  "author": "Stefan Sundin",
  "icons": {
    "16": "img/icon16.png",
    "48": "img/icon48.png",
    "128": "img/icon128.png"
  },
  "action": {
    "default_icon": {
      "19": "img/icon19.png",
      "38": "img/icon38.png"
    },
    "default_title": "Privatkopiera",
    "default_popup": "popup.html"
  },
  "options_ui": {
    "page": "options.html"
  },
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "optional_permissions": [
    "downloads",
    "https://psapi.nrk.no/",
    "https://isl.dr-massive.com/",
    "https://sverigesradio.se/",
    "https://urplay.se/",
    "https://www.svt.se/"
  ],
  "browser_specific_settings": {
    "gecko": {
      "id": "privatkopiera@firefox.stefansundin.com",
      "strict_min_version": "109.0"
    }
  }
}
