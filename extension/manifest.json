{
  "manifest_version": 3,
  "name": "Privatkopiera",
  "version": "0.4.0",
  "description": "Ladda ned från play-tjänster. Kräver ffmpeg.",
  "homepage_url": "https://stefansundin.github.io/privatkopiera/",
  "author": "Stefan Sundin",
  "icons": {
    "16": "img/icon16.png",
    "48": "img/icon48.png",
    "128": "img/icon128.png"
  },
  "action": {
    "default_icon": {
      "19": "img/icon19.png",
      "38": "img/icon38.png"
    },
    "default_title": "Privatkopiera",
    "default_popup": "popup.html"
  },
  "options_ui": {
    "page": "options.html"
  },
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "https://avod-auth-alb.a2d.tv/"
  ],
  "optional_permissions": [
    "downloads"
  ],
  "optional_host_permissions": [
    "https://psapi.nrk.no/",
    "https://isl.dr-massive.com/"
  ]
}
